/* miniprogram/pages/password.wxss */
page{
  height: 100%;
  width: 100%;
}
.password-container{
  width: 750rpx;
  height: 100%;
  background: rgba(238, 198, 198,1);
  color: #fff;
}
.main-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}
.title{
  margin-bottom: 20rpx;
}
.points{
  width: 200rpx;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 70rpx;
}
.circle{
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
}
.circled{
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
  background:#fff;
}
.num-group{
  width: 500rpx;
  height: 600rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center; 
}
.num-block{
  font-size: 40rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background: rgba(238, 198, 198,1);
  border:1rpx solid #fff;
  color: #fff;
  text-align: center;
  line-height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.else{
  color:#fff;background:rgba(238, 198, 198,1);font-size:28rpx;
  white-space: nowrap;
  border: none;
}

.num-block:active{
  background: rgba(255, 255, 255,1);
  color: rgba(238, 198, 198,1);
}
.else:active{
  background: rgba(238, 198, 198,1);
  color: #fff;
}
.num-block image{
  width: 50rpx;
  height: 50rpx;
}