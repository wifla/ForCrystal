}
.info-button{
  display: flex;
  flex-direction: row;
  align-content: center;
  font-size: 24rpx;
  margin-top: 10rpx
}
.update{
  padding: 5rpx 12rpx;
  color: rgba(191, 191, 191,0.5);
  border: 1rpx solid rgba(191, 191, 191,0.5);
  border-radius: 8rpx;
  margin-right: 15rpx;
}
.delete{
  padding: 5rpx 12rpx;
  color: #FF2400;
  border: 1rpx solid rgb(255, 36, 0);
  border-radius: 8rpx;
}
.right-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 180rpx;
  height: 180rpx;
  border: 12rpx solid rgba(255, 36, 0,0.6);
  border-radius: 50%;
