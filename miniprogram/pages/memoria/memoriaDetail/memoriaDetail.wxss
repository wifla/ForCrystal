page{
  background: #fff ;
}
.detail-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  
}
.detail-banner{
  width: 100%;
  height: 400rpx;
  background-position: center center;
  background-size: 100% auto;
  opacity: 0.8;
  /* filter: blur(3rpx); */
}
.author-info{
  position: relative;
  width: 100%;
  height: 100rpx;
  display: flex;flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  color: rgba(255, 36, 0,0.6);
  font-weight: bold;
  font-size: 34rpx;
  
}
.author-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 30rpx;
}
.detail-tag{
  margin-right: 20rpx;
}
.text-info{
  width: 690rpx;
  height: auto;
  margin: 25rpx 30rpx 0 30rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
  
}
.left-info,.right-info{
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.right-info{
  margin-right: 30rpx;
}
.detail-time{
  width: 690rpx;
  height: auto;
  margin: 15rpx 30rpx 0 30rpx;
  font-size: 24rpx;
  color: #ccc;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
}
.img-title{
  width: 120rpx;
  height: 40rpx;
  color: #fff;
  font-size: 26tpx;
  font-weight: bold;
  position: absolute;
  top: 30rpx;
  left: 285rpx;
}
.img-list{
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin: 0 30rpx;
}
.img-list .img-block{
  width: 690rpx;
  
}
.img-block image{
  width: 690rpx;
  
}